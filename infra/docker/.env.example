# Environment Variables for Local Docker Development
# Copy this file to .env and fill in actual values

# Database Configuration (PostgreSQL)
POSTGRES_DB=healthcare
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpass

# MCP Server Configuration
MCP_SERVER_PORT=8000
DATABASE_URL=postgresql://dev:devpass@database:5432/healthcare

# LLM Orchestrator Configuration
ORCHESTRATOR_PORT=8080
MCP_SERVER_URL=http://mcp-server:8000

# AWS Configuration (for Bedrock)
# Get these from Adriean after AWS account setup (INFRA-03)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Knowledge Base
# Get this after RAG-04 (Create Initial Bedrock KB)
BEDROCK_KB_ID=your_kb_id_here

# Chat UI Configuration
VITE_API_BASE_URL=http://localhost:8080
